<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aic.beacondetails.USER_info">

    <TextView
        android:id="@+id/textViewBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Birthday: "
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/editTextBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewBD"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textViewBD"
        android:padding="0dp"
        android:hint="Birthday(YYYYMMDD)"
        android:inputType="number"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_below="@+id/textViewBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editTextName"
        android:text="Name: "
        android:textSize="18sp"/>


    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextBD"
        android:layout_alignLeft="@+id/editTextBD"
        android:padding="0dp"
        android:hint="Name"/>

    <TextView
        android:id="@+id/textViewAge"
        android:layout_below="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editTextAge"
        android:text="Age: "
        android:textSize="18sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAge"
        android:layout_below="@+id/editTextName"
        android:layout_alignLeft="@+id/editTextName"
        android:padding="0dp"
        android:hint="Age"
        android:inputType="number"/>

    <TextView
        android:id="@+id/textViewGender"
        android:layout_below="@+id/textViewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editTextGender"
        android:text="Gender "
        android:textSize="18sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextGender"
        android:layout_below="@+id/editTextAge"
        android:layout_alignLeft="@+id/editTextAge"
        android:padding="0dp"
        android:hint="M,F,Other"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_below="@+id/editTextAge"
        android:layout_alignParentLeft="true"
        android:onClick="save"
        android:layout_marginTop="30dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Serial"
        android:id="@+id/buttonReadSerial"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btnSave"
        android:layout_alignBottom="@+id/btnSave"
        android:layout_marginTop="30dp"
        android:onClick="readSerial"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency"
        android:id="@+id/btnEmergency"
        android:layout_below="@+id/btnSave"
        android:layout_alignParentLeft="true"
        android:onClick="emergency"
        android:layout_marginTop="30dp" />



</RelativeLayout>